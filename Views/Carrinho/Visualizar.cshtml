@model List<EletroStar.Models.Principais.CarrinhoViewModel>
@{ Layout = "~/Views/Shared/_Layout.cshtml"; }

<h2>Terrenos no carrinho</h2>

<br />

<table class="table table-responsive">
    <tr>         
    <th>Produto</th>
    <th>Nome</th>
    <th>Valor</th>
    <th>Imagem</th>
    <th>Quantidade</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProdutoId</td>
            <td>@item.Nome</td>
            <td> @item.Valor</td>
            <td>
                <img id="imgPreview" src="data:image/jpeg;base64,@item.ImagemEmBase64" class="img-responsive" width="50">
            </td>
            <td>@item.quantidade</td>
        </tr>
}
</table>

